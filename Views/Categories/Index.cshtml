@model List<Category>
@{
    ViewBag.Title = "Categories";
    Layout = "_Layout";
}
<h2>Categories</h2>
<a asp-action="Add" asp-controller="Categories">Add category</a>
<div class="table_section">
    @if (@Model.Count == 0)
    {
        <p>Categories haven't been added yet</p>
    }
    else
    {
        <table style="width: 100%;">
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
            @foreach (var category in @Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                </tr>
            }
        </table>
    }
</div>