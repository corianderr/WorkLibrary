@model List<Journal>
@{
    ViewBag.Title = "Taken books";
    Layout = "_Layout";
}
<h2>Taken books</h2>
<div class="table_section">
    @if (@Model.Count == 0)
    {
        <p>All books are in stock</p>
    }
    else
    {
        <table style="width: 100%;">
            <tr>
                <th>Book</th>
                <th>User's name</th>
            </tr>
            @foreach (var item in @Model)
            {
                <tr>
                    <td>@item.Book.Name</td>
                    <td>@item.User.Name @item.User.Surname</td>
                </tr>
            }
        </table>
    }
</div>